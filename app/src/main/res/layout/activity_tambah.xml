<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#ffff"
    tools:context=".Tambah">
    <include
        layout="@layout/toolbar_hasil_cari"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <EditText
            android:id="@+id/txt_nama"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/gray_categories_rect"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:hint="Masukkan nama"/>
        <EditText
            android:id="@+id/txt_nim"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/gray_categories_rect"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:hint="Masukkan nim"/>
        <EditText
            android:id="@+id/txt_kelas"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/gray_categories_rect"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:hint="Masukkan Kelas"/>
        <EditText
            android:id="@+id/txt_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/gray_categories_rect"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:hint="Masukkan Email"/>
        <Button
            android:id="@+id/btn_tambah"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/gradient_rect"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:hint="Tambah"/>
    </LinearLayout>
</LinearLayout>